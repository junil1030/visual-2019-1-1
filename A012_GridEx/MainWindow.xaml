<Window x:Class="A012_GridEx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A012_GridEx"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="325">
    <Grid Width="250" Height="120">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="100" TextAlignment="Right">id:</TextBlock>
                <TextBox Width="100"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock  Width="100" TextAlignment="Right">password:</TextBlock>
                <PasswordBox Width="100"></PasswordBox>
            </StackPanel>
            <Button Margin="10">제출</Button>
        </StackPanel>
    </Grid>
</Window>
